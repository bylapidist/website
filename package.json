{
    "name": "@lapidist/website",
    "version": "0.0.0",
    "description": "The Lapidist website living at lapidist.net",
    "author": "Brett Dorrans <hello@lapidist.net>",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bylapidist/website.git"
    },
    "bugs": {
        "url": "https://github.com/bylapidist/website/issues"
    },
    "homepage": "https://github.com/bylapidist/website#readme",
    "scripts": {
        "dev": "concurrently \"npm run build:tokens:watch\" \"next dev --turbopack\"",
        "start": "npx serve@latest out",
        "build": "npm run build:tokens && npm run build:cv && next build",
        "export": "next export",
        "build:cv": "node ./node_modules/@lapidist/cv-generator/dist/es5/cli.js && node -e \"require('fs').renameSync('brett-dorrans-cv.pdf','public/brett-dorrans-cv.pdf')\"",
        "build:static": "npm run build && npm run export",
        "build:tokens": "style-dictionary build --config style-dictionary.config.mjs && prettier styles/tokens.css --write",
        "build:tokens:watch": "node scripts/build-tokens-watch.mjs",
        "postbuild": "tsx scripts/fix-css-script-tags.ts",
        "lint": "npm run lint:js && npm run lint:styles",
        "lint:js": "eslint .",
        "lint:styles": "stylelint \"**/*.{css,scss}\" --ignore-path .gitignore",
        "lint:design": "design-lint",
        "format": "prettier . --check --plugin=@ianvs/prettier-plugin-sort-imports",
        "format:write": "prettier . --write --plugin=@ianvs/prettier-plugin-sort-imports",
        "typecheck": "tsc --noEmit",
        "fix": "npm run lint:js -- --fix && npm run lint:styles -- --fix && npm run format:write",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test:storybook": "npm run build-storybook && start-server-and-test 'npx http-server storybook-static -p 6006' http://127.0.0.1:6006 'test-storybook --ci --url http://127.0.0.1:6006'",
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "vitest run",
        "test:e2e": "playwright test",
        "test:install-browsers": "playwright install --with-deps",
        "lh:ci": "lhci autorun --config=.lighthouserc.json --enable-error-reporting=false",
        "preqa": "npm run build",
        "qa": "start-server-and-test start http://localhost:3000 lh:ci"
    },
    "dependencies": {
        "@floating-ui/react": "^0.27.16",
        "@lapidist/cv-generator": "2.5.0",
        "clsx": "2.1.1",
        "feed": "^5.0.0",
        "github-slugger": "^2.0.0",
        "gray-matter": "4.0.3",
        "mdast-util-to-string": "^4.0.0",
        "next": "15.5.3",
        "next-mdx-remote": "5.0.0",
        "prettier": "3.6.2",
        "prismjs": "^1.30.0",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "rehype-prism-plus": "^2.0.1",
        "remark": "^15.0.1",
        "remark-gfm": "^4.0.1",
        "remark-reading-time": "^2.0.2",
        "server-only": "^0.0.1",
        "unist-util-visit": "^5.0.0",
        "wavesurfer.js": "^7.7.11"
    },
    "devDependencies": {
        "@axe-core/playwright": "4.10.2",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.36.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.6.1",
        "@lapidist/design-lint": "^5.0.0",
        "@lhci/cli": "0.15.1",
        "@next/eslint-plugin-next": "15.5.3",
        "@playwright/test": "1.55.0",
        "@storybook/addon-a11y": "9.1.7",
        "@storybook/addon-docs": "^9.1.3",
        "@storybook/nextjs": "^9.1.3",
        "@storybook/test-runner": "^0.23.0",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "24.5.2",
        "@types/react": "19.1.13",
        "@types/react-dom": "19.1.9",
        "concurrently": "^9.2.1",
        "eslint": "9.36.0",
        "eslint-config-next": "15.5.3",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react-compiler": "^19.1.0-rc.2",
        "eslint-plugin-storybook": "9.1.7",
        "jsdom": "^26.1.0",
        "lighthouse": "12.8.2",
        "postcss-import": "^16.1.1",
        "postcss-scss": "^4.0.9",
        "sass": "1.92.1",
        "start-server-and-test": "2.1.2",
        "storybook": "9.1.7",
        "style-dictionary": "^5.0.0",
        "stylelint": "16.24.0",
        "stylelint-config-css-modules": "4.5.1",
        "stylelint-config-standard": "39.0.0",
        "tsx": "4.20.5",
        "typescript": "5.9.2",
        "typescript-eslint": "8.44.0",
        "vite": "^7.1.3",
        "vitest": "^3.2.4"
    },
    "overrides": {
        "@swc/helpers": "0.5.17"
    }
}
