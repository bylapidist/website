{
    "name": "@lapidist/website",
    "version": "0.0.0",
    "description": "The Lapidist website living at lapidist.net",
    "author": "Brett Dorrans <hello@lapidist.net>",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bylapidist/website.git"
    },
    "bugs": {
        "url": "https://github.com/bylapidist/website/issues"
    },
    "homepage": "https://github.com/bylapidist/website#readme",
    "scripts": {
        "dev": "next dev --turbopack",
        "start": "npx serve@latest out",
        "build": "npm run build:cv && npm run build:next",
        "build:cv": "node ./node_modules/@lapidist/cv-generator/dist/es5/cli.js && mv brett-dorrans-cv.pdf public/",
        "build:next": "next build",
        "lint": "npm run lint:js && npm run lint:styles",
        "lint:js": "eslint .",
        "lint:styles": "stylelint \"**/*.{css,scss}\" --ignore-path .gitignore",
        "format": "prettier . --check --plugin=@ianvs/prettier-plugin-sort-imports",
        "format:write": "prettier . --write --plugin=@ianvs/prettier-plugin-sort-imports",
        "typecheck": "tsc --noEmit",
        "fix": "npm run lint:js -- --fix && npm run lint:styles -- --fix && npm run format:write",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test": "playwright test",
        "test:install-browsers": "playwright install --with-deps",
        "lh:ci": "lhci autorun --config=.lighthouserc.json --enable-error-reporting=false",
        "preqa": "npm run build",
        "qa": "start-server-and-test start http://localhost:3000 lh:ci"
    },
    "dependencies": {
        "@lapidist/cv-generator": "2.4.0",
        "clsx": "2.1.1",
        "github-slugger": "^2.0.0",
        "gray-matter": "4.0.3",
        "mdast-util-to-string": "^4.0.0",
        "next": "15.4.6",
        "next-mdx-remote": "5.0.0",
        "prettier": "3.6.2",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "remark": "^15.0.1",
        "remark-gfm": "^4.0.1",
        "remark-reading-time": "^2.0.2",
        "unist-util-visit": "^5.0.0"
    },
    "devDependencies": {
        "@axe-core/playwright": "4.10.2",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.33.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.6.1",
        "@lhci/cli": "0.15.1",
        "@next/eslint-plugin-next": "15.4.6",
        "@playwright/test": "1.54.2",
        "@storybook/nextjs": "^9.1.1",
        "@types/node": "24.3.0",
        "@types/react": "19.1.10",
        "@types/react-dom": "19.1.7",
        "eslint": "9.33.0",
        "eslint-config-next": "15.4.6",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react-compiler": "^19.1.0-rc.2",
        "eslint-plugin-storybook": "9.1.2",
        "lighthouse": "12.8.1",
        "postcss-import": "^16.1.1",
        "postcss-scss": "^4.0.9",
        "sass": "1.90.0",
        "start-server-and-test": "2.0.13",
        "storybook": "9.1.2",
        "stylelint": "16.23.1",
        "stylelint-config-css-modules": "4.5.1",
        "stylelint-config-standard": "39.0.0",
        "typescript": "5.9.2",
        "typescript-eslint": "8.40.0"
    }
}
