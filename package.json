{
    "name": "@lapidist/website",
    "version": "0.0.0",
    "description": "The Lapidist website living at lapidist.net",
    "author": "Brett Dorrans <hello@lapidist.net>",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bylapidist/website.git"
    },
    "bugs": {
        "url": "https://github.com/bylapidist/website/issues"
    },
    "homepage": "https://github.com/bylapidist/website#readme",
    "scripts": {
        "dev": "next dev --turbopack",
        "start": "npx serve@latest out",
        "build": "npm run build:cv && npm run build:next",
        "build:cv": "node ./node_modules/@lapidist/cv-generator/dist/es5/cli.js && mv brett-dorrans-cv.pdf public/",
        "build:next": "next build",
        "lint": "npm run lint:eslint && npm run lint:css && npm run format:check",
        "lint:eslint": "next lint",
        "lint:css": "stylelint \"**/*.css\" \"**/*.module.css\" \"**/*.scss\" \"**/*.module.scss\" --ignore-path .gitignore",
        "format:check": "prettier . --check",
        "format:write": "prettier . --write",
        "fix": "npm run lint:eslint -- --fix && npm run lint:css -- --fix && npm run format:write",
        "storybook": "storybook dev -p 6006",
        "storybook:build": "storybook build",
        "test": "playwright test",
        "test:install-browsers": "playwright install --with-deps",
        "lh:ci": "lhci autorun --config=.lighthouserc.json --enable-error-reporting=false",
        "preqa": "npm run build",
        "qa": "start-server-and-test start http://localhost:3000 lh:ci"
    },
    "dependencies": {
        "@lapidist/cv-generator": "2.4.0",
        "next": "15.4.6",
        "prettier": "3.6.2",
        "react": "19.1.1",
        "react-dom": "19.1.1"
    },
    "devDependencies": {
        "@axe-core/playwright": "4.10.2",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.33.0",
        "@lhci/cli": "0.15.1",
        "@playwright/test": "1.54.2",
        "@storybook/nextjs": "^9.1.1",
        "@types/node": "24.2.1",
        "@types/react": "19.1.9",
        "@types/react-dom": "19.1.7",
        "eslint": "9.33.0",
        "eslint-config-next": "15.4.6",
        "eslint-plugin-storybook": "9.1.1",
        "lighthouse": "12.8.1",
        "sass": "1.90.0",
        "start-server-and-test": "2.0.13",
        "storybook": "9.1.1",
        "stylelint": "16.23.1",
        "stylelint-config-css-modules": "4.5.1",
        "stylelint-config-standard": "39.0.0",
        "typescript": "5.9.2",
        "typescript-eslint": "8.39.0"
    }
}
