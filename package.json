{
    "name": "@lapidist/website",
    "version": "0.0.0",
    "description": "The Lapidist website living at lapidist.net",
    "author": "Brett Dorrans <hello@lapidist.net>",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bylapidist/website.git"
    },
    "bugs": {
        "url": "https://github.com/bylapidist/website/issues"
    },
    "homepage": "https://github.com/bylapidist/website#readme",
    "scripts": {
        "dev": "next dev --turbopack",
        "start": "next start",
        "lint": "next lint && stylelint \"**/*.css\" --ignore-path .gitignore && npx prettier . --check",
        "fix": "next lint --fix && stylelint \"**/*.css\" --fix --ignore-path .gitignore && npx prettier . --write",
        "build": "npm run build:cv && npm run build:next",
        "build:cv": "node ./node_modules/@lapidist/cv-generator/dist/es5/cli.js && mv brett-dorrans-cv.pdf public/",
        "build:next": "next build",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@lapidist/cv-generator": "2.4.0",
        "next": "15.4.6",
        "prettier": "3.6.2",
        "react": "19.1.1",
        "react-dom": "19.1.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.33.0",
        "@storybook/nextjs": "^9.1.1",
        "@types/node": "24.2.1",
        "@types/react": "19.1.9",
        "@types/react-dom": "19.1.7",
        "eslint": "9.33.0",
        "eslint-config-next": "15.4.6",
        "eslint-plugin-storybook": "9.1.1",
        "storybook": "9.1.1",
        "stylelint": "16.23.1",
        "stylelint-config-css-modules": "4.5.1",
        "stylelint-config-standard": "39.0.0",
        "typescript": "5.9.2",
        "typescript-eslint": "8.39.1"
    }
}
